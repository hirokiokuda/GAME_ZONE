<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="font-weight-bold">ゲーム一覧（ 全<%= @games.count %>件 ）</h3>

      <% @games.each do |game| %>
        <div class="m-md-4 d-inline-block">
          <p class="mt-md-2">
            <%= link_to game_path(game.id) do %>
            <%= image_tag game.image, size: '300x200' %>
            <% end %>
          </p>
          <strong><%= game.name %></strong>
        </div>
      <% end %>
      <%= paginate @games %>
    </div>
  </div>
</div>
