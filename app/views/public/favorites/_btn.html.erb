<% if game_comment.favorited_by?(current_customer) %>
  <%= link_to game_game_comment_favorites_path(game_comment.game, game_comment), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= game_comment.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to game_game_comment_favorites_path(game_comment.game, game_comment), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= game_comment.favorites.count %> いいね
  <% end %>
<% end %>
