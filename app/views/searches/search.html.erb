<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがCustomerの時 -->
  <% if @range == "Customer" %>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.nickname, customer_path(customer.id) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがCustomerではない時(= 検索対象モデルがGameの時) -->
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to game.name, game_path(game.id) %></td>
          <td><%= game.introduction%></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>