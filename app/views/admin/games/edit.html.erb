<div class="container">
  <h3>ゲーム編集</h3>
  <div class="row">

    <%= form_with model: @game, url: admin_game_path(@game.id), local: true do |f| %>
      <table class="games">
        <tr>
          <th>イメージ画像</th>
          <td><%= f.file_field :image %></td>
        </tr>
        <tr>
          <th>ゲーム名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th>ゲーム説明</th>
          <td><%= f.text_area :explanation %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%#= f.collection_select(:genre_id, @genre, :id, :name, prompt: "選択してください") %></td>
        </tr>
      </table>
      <br>
      <%= f.submit "変更を保存", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
