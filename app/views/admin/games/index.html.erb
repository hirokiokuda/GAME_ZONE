<div class="container mx-auto">
  <div class="row">
    <div class="col">
      <h3>ゲーム一覧</h3>
    </div>
    <div class="col-ml-auto">
      <%= link_to new_admin_game_path do %>
        <i class="fas fa-plus-circle fa-3x"></i>
      <% end %>
    </div>
  </div>

  <table class="games">
    <thead>
      <tr>
        <th>ゲームID</th>
        <th>ゲーム名</th>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.id %></td>
          <td><%= link_to game.name, admin_game_path(game.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
