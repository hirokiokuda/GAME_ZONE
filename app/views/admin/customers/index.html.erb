<h4>会員一覧</h4>
  <table class="table col-md-10 offset-md-1 table-hover">
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.nickname, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
