<h4><%= @customer.nickname %>さんの会員情報編集</h4>
    
  <div class="col-md-11 offset-md-1">
  <%= form_with model: @customer, url: admin_customer_path do |f| %>
    <table class="table table-borderless">
      <tr>
        <th class="w-25 font-weight-normal">会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th class="w-25 font-weight-normal">
          <label for="inputEmail">メールアドレス</label>
        </th>
      </tr>
      <tr>
        <th class="w-25"></th>
        <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
      </tr>
    </table>
  <% end %>
  </div>
